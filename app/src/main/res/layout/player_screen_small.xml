<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/small_player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/small_player_icon"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_marginEnd="@dimen/px_20"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/small_player_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_35"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/px_35"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/small_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_5"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/small_screen_progress" />

</RelativeLayout>