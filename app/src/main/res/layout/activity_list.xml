<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/common_bg">

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_120"
        android:layout_marginTop="@dimen/px_60"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/px_60"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folder_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/px_80"
        android:layout_marginTop="@dimen/px_150"
        android:layout_marginEnd="@dimen/px_80"
        android:paddingStart="@dimen/px_40"
        android:paddingEnd="@dimen/px_40"
        android:paddingTop="@dimen/px_30"
        android:clipToPadding="false"
        android:layout_marginBottom="@dimen/px_50" />

</RelativeLayout>