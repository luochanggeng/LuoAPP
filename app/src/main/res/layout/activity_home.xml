<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@mipmap/common_bg">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/px_282"
        android:layout_height="@dimen/px_80"
        android:layout_marginStart="@dimen/px_120"
        android:layout_marginTop="@dimen/px_60" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_80"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/px_60"
        android:layout_marginEnd="@dimen/px_120"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_net_state"
            android:layout_width="@dimen/px_52"
            android:layout_height="@dimen/px_52"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/net_disconnect_icon" />

        <LinearLayout
            android:layout_width="@dimen/px_180"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:textSize="@dimen/px_29"/>

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:textSize="@dimen/px_29"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/px_15"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/px_60"/>

    </LinearLayout>

    <com.luo.app.widget.FocusFlashImageView
        android:id="@+id/iv_folder1"
        android:layout_width="@dimen/px_330"
        android:layout_height="@dimen/px_520"
        android:layout_marginStart="@dimen/px_120"
        android:layout_marginTop="@dimen/px_180"
        android:focusable="true"
        android:scaleType="fitXY" />

    <com.luo.app.widget.FocusFlashImageView
        android:id="@+id/iv_folder2"
        android:layout_width="@dimen/px_330"
        android:layout_height="@dimen/px_520"
        android:layout_marginStart="@dimen/px_498"
        android:layout_marginTop="@dimen/px_180"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_player"
        android:layout_width="@dimen/px_931"
        android:layout_height="@dimen/px_526"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/px_117"
        android:layout_marginTop="@dimen/px_177"
        android:background="@drawable/small_player_bg_selector"
        android:focusable="true"
        android:padding="@dimen/px_3">

        <com.luo.app.player.core.LuoPlayerScreen
            android:id="@+id/luoPlayerScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:screen_state="screen_small"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/iv_player_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@mipmap/small_screen_mask"/>

    </RelativeLayout>

    <com.luo.app.widget.FocusFlashImageView
        android:id="@+id/iv_folder3"
        android:layout_width="@dimen/px_384"
        android:layout_height="@dimen/px_214"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_103"
        android:layout_marginStart="@dimen/px_120"
        android:focusable="true"
        android:scaleType="fitXY" />

    <com.luo.app.widget.FocusFlashImageView
        android:id="@+id/iv_folder4"
        android:layout_width="@dimen/px_384"
        android:layout_height="@dimen/px_214"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_103"
        android:layout_marginStart="@dimen/px_552"
        android:focusable="true"
        android:scaleType="fitXY" />

    <com.luo.app.widget.FocusFlashImageView
        android:id="@+id/iv_folder5"
        android:layout_width="@dimen/px_384"
        android:layout_height="@dimen/px_214"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_103"
        android:layout_marginStart="@dimen/px_984"
        android:focusable="true"
        android:scaleType="fitXY" />

    <com.luo.app.widget.FocusFlashImageView
        android:id="@+id/iv_folder6"
        android:layout_width="@dimen/px_384"
        android:layout_height="@dimen/px_214"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/px_103"
        android:layout_marginEnd="@dimen/px_120"
        android:focusable="true"
        android:scaleType="fitXY" />

</RelativeLayout>