<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tv_splash_bg"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_170"
        android:orientation="vertical">

        <com.luo.app.tvDemo.widget.CircleImageView
            android:layout_width="@dimen/px_300"
            android:layout_height="@dimen/px_300"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/tv_head"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/px_300"
            android:layout_height="@dimen/px_70"
            android:layout_marginTop="@dimen/px_50"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px_30"
            android:text="登录"
            android:focusable="true"
            android:background="@drawable/tv_common_text_bg_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/px_60"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/tv_setting_bg_selector"
        android:focusable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_setting_icon"
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:layout_marginTop="@dimen/px_5"
            android:layout_marginBottom="@dimen/px_5"
            android:layout_marginEnd="@dimen/px_5"
            android:layout_marginStart="@dimen/px_10"
            android:src="@mipmap/tv_setting_icon" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/px_25"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/px_10"
            android:text="设置"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_20"
        android:textColor="@color/white_aa"
        android:textSize="@dimen/px_28"
        android:text="@string/copyright" />

</RelativeLayout>