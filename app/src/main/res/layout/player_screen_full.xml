<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/full_player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/full_player_icon"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_marginEnd="@dimen/px_20"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/full_player_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_35"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/px_35"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/full_pause_icon"
        android:layout_width="@dimen/px_180"
        android:layout_height="@dimen/px_180"
        android:layout_centerInParent="true"
        android:src="@mipmap/full_player_pause_icon"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/full_progress_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_322"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@mipmap/full_progress_area_bg"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_110"
            android:layout_marginStart="@dimen/px_220"
            android:layout_marginTop="@dimen/px_140"
            android:layout_marginEnd="@dimen/px_220">
            <TextView
                android:id="@+id/full_video_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_35"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/px_80"
                android:layout_marginTop="@dimen/px_30"
                android:includeFontPadding="false"
                android:text="00:00"/>

            <TextView
                android:id="@+id/full_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_35"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/px_30"
                android:includeFontPadding="false"
                android:layout_marginEnd="@dimen/px_20"
                android:text="00:00"/>

            <ImageView
                android:id="@+id/full_progress_icon"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/rewind" />

            <SeekBar
                android:id="@+id/full_progress_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_60"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px_6"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxHeight="@dimen/px_6"
                android:minHeight="@dimen/px_6"
                android:paddingStart="@dimen/px_20"
                android:paddingEnd="@dimen/px_20"
                android:progressBackgroundTint="@color/white_44"
                android:progressTint="#E5BF20"
                android:thumb="@drawable/seekbar_circle" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>