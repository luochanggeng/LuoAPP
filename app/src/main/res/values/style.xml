<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="tv_player_screen">
        <attr name="tv_screen_state" format="string">
            <enum name="tv_screen_small" value="0"/>
            <enum name="tv_screen_full" value="1"/>
        </attr>
    </declare-styleable>

    <style name="tv_ipAddressEditDialog" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--&lt;!&ndash; 背景透明 &ndash;&gt;-->
        <item name="android:windowBackground">@color/black_bb</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

</resources>